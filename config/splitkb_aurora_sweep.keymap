#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include "keys_de.h"

/ {
    keymap {
        compatible = "zmk,keymap";

        /* =========================
         * LAYER 0 — DEFAULT (DE)
         * 26 Buchstaben + ä ö ü ß
         * ========================= */
        default_layer {
            bindings = <
                &kp Q   &kp W   &kp E   &kp R   &kp T            &kp Y   &kp U   &kp I   &kp O   &kp P
                &kp A   &kp S   &kp D   &kp F   &kp G            &kp H   &kp J   &kp K   &kp L   &kp DE_OE
                &kp Z   &kp X   &kp C   &kp V   &kp B            &kp N   &kp M   &kp DE_AE &kp DE_UE &kp DE_SZ
                               &mo 1   &kp LCTRL                 &kp SPACE &mo 2
            >;
        };

        /* =========================
         * LAYER 1 — SYMBOLS
         * ========================= */
        sym_layer {
            bindings = <
                &kp EXCL &kp DQT   &kp HASH  &kp DLLR  &kp PRCNT      &kp CARET &kp AMPS  &kp STAR  &kp LPAR  &kp RPAR
                &kp LBRC &kp RBRC  &kp LBKT  &kp RBKT  &kp PIPE       &kp PLUS  &kp MINUS &kp EQUAL &kp LT    &kp GT
                &kp TILDE &kp GRAVE &kp SEMI &kp COLON &kp FSLH       &kp UNDER &kp QMARK &kp AT    &kp BSLH  &kp DE_SZ
                                &trans &trans                         &trans &trans
            >;
        };

        /* =========================
         * LAYER 2 — NUM + NAV
         * ========================= */
        num_nav_layer {
            bindings = <
                &kp HOME &kp PG_UP &kp UP   &kp PG_DN &kp END        &kp KP_N7 &kp KP_N8 &kp KP_N9 &kp KP_DIVIDE   &kp KP_MULTIPLY
                &kp LGUI &kp LEFT  &kp DOWN &kp RIGHT &kp ESC        &kp KP_N4 &kp KP_N5 &kp KP_N6 &kp KP_MINUS    &kp KP_PLUS
                &kp TAB  &kp BSPC  &kp DEL  &kp RET   &kp INS        &kp KP_N1 &kp KP_N2 &kp KP_N3 &kp KP_DOT      &kp KP_ENTER
                                &trans &trans                         &kp KP_N0 &trans
            >;
        };
    };
};
